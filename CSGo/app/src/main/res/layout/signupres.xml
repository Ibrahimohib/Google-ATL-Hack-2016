<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Email"
        android:id="@+id/emailLabel"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/emailField"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailLabel" />

    <TextView
        android:text="Password"
        android:id="@+id/psswdLabel"
        android:textSize="25sp"
        android:layout_below="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/psswdField"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/psswdLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:text="Confirm Password"
        android:id="@+id/conPsswdLabel"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/psswdField"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/conPsswdField"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conPsswdLabel"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:inputType="textPassword"/>

    <Button
        android:onClick="profile"
        android:id="@+id/signUp"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>